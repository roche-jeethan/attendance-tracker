datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id String @id @default(cuid())
    email String @unique
    name String?
    password String
    absences Absence[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Absence {
    id String @id @default(cuid())
    date DateTime
    subject String
    reason String?
    userId String
    user User @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}